{
  "version": 2,
  "buildCommand": null,
  "outputDirectory": "public-site",
  "public": true,
  "cleanUrls": false,
  "trailingSlash": false,
  "github": {
    "silent": true
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/edit.html",
      "permanent": true
    },
    {
      "source": "/admin",
      "destination": "/edit.html",
      "permanent": true
    },
    {
      "source": "/editor",
      "destination": "/edit.html",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=1, stale-while-revalidate"
        }
      ]
    }
  ]
}
